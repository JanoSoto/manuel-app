<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Plantillas de Encuesta
    <small>Listado de Plantillas de Encuesta registradas</small>
  </h1>
  <ol class="breadcrumb">
    <li class="active">Plantillas de Encuesta</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to root_path  do %>
        <i class="fa fa-arrow-left"></i> Volver
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @surveys.each_with_index do |survey, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= survey.name %></td>
                  <td><%= survey.description %></td>
                  <td><%= link_to 'Ver', survey %></td>
                  <!-- <td><%#= link_to 'Eliminar', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>      
          <%= will_paginate @surveys, param_name: 'page', renderer: BootstrapPagination::Rails %>
          <%= link_to 'Nueva encuesta', new_survey_path, class: 'btn btn-primary btn-flat' %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /.content -->
