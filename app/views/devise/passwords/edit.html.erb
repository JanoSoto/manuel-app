<p class="login-box-msg">Ingrese una nueva contraseña</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group has-feedback">
    <%= f.label :password, "Nueva contraseña" %><br />
    <% if @minimum_password_length %>
      <em>(Mínimo <%= @minimum_password_length %> caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', required: true %>
  </div>

  <div class="form-group has-feedback">
    <%= f.label :password_confirmation, "Confirme su nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-6">
      <%= f.submit "Cambiar contraseña", class: "btn btn-primary btn-block btn-flat" %>
    </div>        
  </div>

<% end %>

<%= render "devise/shared/links" %>