<%= form_for(@pet, url: {action: 'add_pet', controller: 'clients'}, method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, class: 'form-control', required: true, data: {error: 'Debe indicar el nombre de la mascota'} %>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= f.label :genre, 'GÃ©nero' %><br>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary active">
        <%= f.radio_button :genre, "macho", class: 'switch-radio', checked: true %>
        Macho
      </label>
      <label class="btn btn-primary">
        <%= f.radio_button :genre, "hembra", class: 'switch-radio' %>
          Hembra
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :race_id, 'Raza' %><br>
    <%= f.select :race_id, options_for_select(@races), {}, {class: 'form-control', style: 'width: 100%;'} %>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, 'Fecha de nacimiento' %>
    <div class="input-group date">
      <div class="input-group-addon">
          <span class="fa fa-calendar"></span>
      </div>
      <%= f.text_field :birthdate, class: 'form-control datepicker' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observations, 'Observaciones' %>
    <%= f.text_area :observations, class: 'form-control' %>
  </div>

  <%= f.hidden_field(:client_id, value: params[:id]) %>
  <%= f.submit 'Guardar', class: 'btn btn-primary pull-right' %>
  
<% end %>

<script>
  $('switch-radio').on('switch-change', function () {
    $('switch-radio').bootstrapSwitch('toggleRadioState');
  });
</script>
