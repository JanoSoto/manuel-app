<p id="notice"><%= notice %></p>

<section class="content-header">
  <h1>
    Listado de Clientes
    <small>Seleccione al cliente que desea consultar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= clients_path %>"></i>Clientes</a></li>
  </ol>
</section>
<br>
<div class="container-fluid box box-primary table-pad">
  <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>RUT</th>
        <th colspan="2">Nombre</th>
        <th>Correo</th>
        <th>Teléfono</th>
        <th>Dirección</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.clientRut %></td>
          <td colspan="2"><%= client.clientName %> <%= client.clientLastName %></td>
          <td><%= client.clientEmail %></td>
          <td><%= client.clientCellPhone %></td>
          <td><%= client.clientAddress %></td>
          <td><%= link_to client do %> <i class="fa fa-eye"></i> <% end %></td>
          <td><%= link_to edit_client_path(client) do %><i class="fa fa-pencil"></i> <% end %></td>
          <td><%= link_to client, method: :delete, data: { confirm: '¿Estas seguro?' } do %><i class="fa fa-trash"></i>  <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @clients, :param_name => 'page', renderer: BootstrapPagination::Rails %>  
  <br>
  <%= link_to new_client_path , class: "btn btn-primary btn-flat" do %>
    <p class="white-text"> + Nuevo cliente</p>
  <% end %>
  <br><br>
</div>
<script>
  $(document).ready(function() {
    $('#example').DataTable();
} );
</script>
