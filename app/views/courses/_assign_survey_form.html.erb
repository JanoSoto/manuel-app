<%= form_tag action_path do %>
	<div class="form-group">
		<%= label_tag :survey_id, 'Seleccione una encuesta' %>							
		<%= select_tag(:survey_id, options_for_select(@surveys, @assigned_survey.try(:survey_id)), include_blank: 'Seleccione una encuesta', class: 'form-control', id: 'select-survey', required: true) %>
	</div>
	<div class="form-group">
		<%= label_tag :name, 'AsÃ­gnele un nombre a esta encuesta para su curso' %>
		<%= text_field_tag :name, @assigned_survey.try(:name), class: 'form-control', required: true %>
	</div>
	<%= hidden_field_tag(:course_id, @course.id) %>
	<%= hidden_field_tag(:old_name, @assigned_survey.try(:name)) %>
	<%= submit_tag action_button.to_s+' encuesta', class: 'btn btn-primary btn-flat btn-block' %>
<% end %>