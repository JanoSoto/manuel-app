<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Ver curso
    <small>Ver toda la información de un curso</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= courses_path %>">Cursos</a></li>
    <li class="active">Ver curso</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to courses_path do %>
        <i class="fa fa-arrow-left"></i> Volver
      <% end %>
    </div>
  </div>
  <div class="row">
    <br>
    <div class="col-xs-12 col-md-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Información general</h3>
          <div class="box-tools pull-right">
            <%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-primary btn-flat' %> 
          </div>
        </div>
        <div class="box-body">
          <table class="table">
            <tbody>
              <tr>
                <th>Nombre</th>
                <td><%= @course.name %></td>
              </tr>
              <tr>
                <th>Semestre/Año</th>
                <td><%= @course.semester %>/<%= @course.year %></td>
              </tr>
              <tr>
                <th>Profesor</th>
                <td><%= @course.user.full_name %></td>
              </tr>
              <tr>
                <th>Estado</th>
                <td><%= @course.status ? 'Activo' : 'Desactivado' %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">Estudiantes asignados</h3>
          <div class="box-tools pull-right">
            <%= link_to 'Editar', assign_students_path(@course), class: 'btn btn-primary btn-flat' %>
          </div>
        </div>
        <div class="box-body">
          <% if @students.empty? %>
            <span>No hay estudiantes asignados a este curso</span>
          <% else %>
            <table class="table">
              <tbody>
                <% @students.each do |student| %>
                  <tr>
                    <td><%= student[:name] %></td>
                    <% if student[:role] == 'ayudante' %>
                      <td class="pull-right"><span class="label label-primary">Ayudante</span></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="box box-warning">
        <div class="box-header with-border">
          <div class="box-title">Resultados encuestas</div>
        </div>
        <div class="box-body">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim ven
        </div>
      </div>
    </div>    
  </div>
</section>
<!-- /.content -->

