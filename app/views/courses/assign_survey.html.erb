<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Ver curso
    <small>Ver toda la información de un curso</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= courses_path %>">Cursos</a></li>
    <li><a href="<%= course_path(@course) %>"><%= @course.name %></a></li>
    <li class="active">Asignar encuesta</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
      <%= link_to course_path @course do %>
        <i class="fa fa-arrow-left"></i> Volver
      <% end %>
		</div>	
	</div>
	<br>
	<div class="row">
		<div class="col-xs-12 col-md-4">
			<div class="panel">
				<div class="panel-body">
					<h3>Asignar encuesta</h3>
					<%= form_tag save_assigned_survey_path do %>
						<div class="form-group">
							<%= label_tag :survey_id, 'Seleccione una encuesta' %>							
							<%= select_tag(:survey_id, options_for_select(@surveys), include_blank: 'Seleccione una encuesta', class: 'form-control', id: 'select-survey', required: true) %>
						</div>
						<div class="form-group">
							<%= label_tag :name, 'Asígnele un nombre a esta encuesta para su curso' %>
							<%= text_field_tag :name, nil, class: 'form-control', required: true %>
						</div>
						<%= hidden_field_tag(:course_id, @course.id) %>
						<%= submit_tag 'Crear encuesta', class: 'btn btn-primary btn-flat btn-block' %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-md-8">
			<div class="panel">
				<div class="panel-body">
					<h3>Preguntas de la encuesta</h3>
					<div id="survey-questions">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	$('#select-survey').change(function(){
		$('#survey-questions').empty();
		$.post('<%= questions_by_survey_path %>', {survey_id: $(this).val()});
	})
</script>