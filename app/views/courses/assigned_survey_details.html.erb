<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Ver detalles de <%= params[:survey_name] %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= courses_path %>">Cursos</a></li>
    <li><a href="<%= course_path(@course) %>"><%= @course.name %></a></li>
    <li>Detalles de encuesta</li>
    <li class="active"><%= params[:survey_name] %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12">
      <%= link_to course_path @course do %>
        <i class="fa fa-arrow-left"></i> Volver
      <% end %>
		</div>	
	</div>
	<br>
	<div class="row">
		<div class="col-xs-12 col-md-5">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Estado de la encuesta</h3>
				</div>
				<div class="box-body">
					<table class="table">
						<thead>
							<th>Estudiante</th>
							<th>Estado</th>
							<th></th>
						</thead>
						<tbody>
							<% @assigned_survey.each do |survey| %>
								<tr>
									<td><%= survey.user.full_name %></td>
									<td><%= survey.answered ? 'Contestada' : 'Pendiente' %></td>
									<% unless survey.answered %>
										<td><%= link_to 'Enviar recordatorio', '#', class: 'btn btn-primary btn-flat' %></td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-md-7">
			<div class="box box-success">
				<div class="box-header">
					<h3 class="box-title">Resultados</h3>
				</div>
				<div class="box-body">
					
				</div>
			</div>
		</div>
	</div>
</section>