<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title>Manuel App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.es.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

  <%= csrf_meta_tags %>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<% if user_signed_in? %>
<body class="hold-transition skin-blue sidebar-mini">
	<% unless flash.empty? %>
    <script type="text/javascript">
      <% flash.each do |f| %>
      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
         toastr['<%= type %>']('<%= f[1] %>').attr('style', 'width: 400px; font-size: 1.7rem;');
      <% end %>
    </script>
  <% end %>
	<!--p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p-->

	<div class="wrapper">
	  <%= render 'layouts/shared/header' %>
	  
	  <%= render 'layouts/shared/sidebar' %>
	  
	  <!-- Content Wrapper. Contains page content -->
	  <div class="content-wrapper">
	    
	    <%= yield %>
	    
	  </div>
	  <!-- /.content-wrapper -->
	  <%= render 'layouts/shared/footer' %>
    
	</div>
	<!-- ./wrapper -->
</body>
<% else %>
	<body class="hold-transition login-page">
		<% unless flash.empty? %>
	    <script type="text/javascript">
	     	<% flash.each do |f| %>
	      	<% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
	        toastr['<%= type %>']('<%= f[1] %>').attr('style', 'width: 400px; font-size: 1.7rem;');
	      <% end %>
	    </script>
	  <% end %>
		<div class="login-box">
		  <div class="login-logo">
		    	<span>MANUEL APP</span>
		  </div>
		  <!-- /.login-logo -->
		  <div class="login-box-body">
				<%= yield %>		

		  </div>
		  <!-- /.login-box-body -->
		</div>
		<!-- /.login-box -->
	</body>
<% end %>

</html>
