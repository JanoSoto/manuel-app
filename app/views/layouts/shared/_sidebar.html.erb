<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
	<!-- sidebar: style can be found in sidebar.less -->
	<section class="sidebar">

	  <!-- Sidebar user panel (optional) -->
	  <div class="user-panel">
	    <div class="pull-left image">
	      <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="Usuario:">
	    </div>
	    <div class="pull-left info">
	      <p><%= current_user.user_name%></p>
	    </div>
	  </div>

	  <!-- Sidebar Menu -->
	  <ul class="sidebar-menu">
	    <li class="header">MENÚ</li>
	    <!-- Optionally, you can add icons to the links -->
	    <li class="treeview">
	      <a href="#"><i class="fa fa-user"></i> <span>Usuarios</span>
	        <span class="pull-right-container">
	          <i class="fa fa-angle-left pull-right"></i>
	        </span>
	      </a>
	      <ul class="treeview-menu">
	      	<% if current_user.admin? %>
	        	<li><a href="<%= new_user_path %>"><i class="fa fa-plus"></i> Nuevo usuario</a></li>
	        <% end %>
	        <li><a href="#">Link in level 2</a></li>
	      </ul>
	    </li>
	    <li class="treeview">
	      <a href="#"><i class="fa fa-users"></i> <span>Clientes</span>
	        <span class="pull-right-container">
	          <i class="fa fa-angle-left pull-right"></i>
	        </span>
	      </a>
	      <ul class="treeview-menu">
	        <li><a href="<%= new_client_path %>"><i class="fa fa-plus"></i> Nuevo Cliente</a></li>
	      	<li><a href="<%= clients_path %>"><i class="fa fa-list"></i> Listado Clientes</a></li>
	      </ul>
	    </li>
	    <!-- Estado de cuentas -->
	    <li class="treeview">
	      <a href="#"><i class="fa fa-money"></i> <span>Estado de cuentas</span>
	        <span class="pull-right-container">
	          <i class="fa fa-angle-left pull-right"></i>
	        </span>
	      </a>
	      <ul class="treeview-menu">
	        <li><a href="<%= payments_path %>"><i class="fa fa-plus"></i> Abonos</a></li>
	      	<li><a href="<%= clients_path %>"><i class="fa fa-calculator"></i> Cargos</a></li>
	      	<li><a href="<%= clients_path %>"><i class="fa fa-list-alt "></i> Cartola clientes</a></li>
	      </ul>
	    </li>
	    <li><a href="#"><i class="fa fa-link"></i> <span>Another Link</span></a></li>
	  	<li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out"></i> <span>Cerrar Sesión</span><%end%></li>
	  
	  </ul>
	  <!-- /.sidebar-menu -->
	</section>
	<!-- /.sidebar -->
</aside>
