<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Nuevo usuario
    <small>Cree un nuevo usuario en el sistema</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"></i>Usuarios</a></li>
    <li class="active">Nuevo usuario</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= form_for @new_user, url: {action: 'create_user'} do |f| %>
						<div class="form-group">
					    <%= f.label :email %><br />
					    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, data: {error: 'El email ingresado no es válido'} %>
					    <span class="help-block with-errors"></span>
					  </div>
					  <div class="form-group">
					    <%= f.label :nombre %><br />
					    <%= f.text_field :name, class: 'form-control', required: true %>
					    <span class="help-block with-errors"></span>
					  </div>
					  <div class="form-group">
					    <%= f.label :apellido %><br />
					    <%= f.text_field :lastname, class: 'form-control', required: true %>
					    <span class="help-block with-errors"></span>
					  </div>
					  <div class="form-group">
					    <%= f.label :teléfono %><br />
					    <%= f.text_field :phone, class: 'form-control', required: true, data: {inputmask:'"mask": "+(999) 9999 9999"'} %>
					    <span class="help-block with-errors"></span>
					  </div>
					  <div class="form-group">
					  	<div class="checkbox">
							  <label>
							    <%= check_box_tag(:admin, true, false, class: 'switch', data: {on: "Administrador", off: "Recepcionista"}) %>
							  </label>
							</div>
					  </div>
					  <%= f.submit "Guardar", class: "btn btn-primary btn-block btn-flat" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- /.content -->