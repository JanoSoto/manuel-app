<section class="content-header">
  <h1>
    Listado de Usuarios
    <small>Seleccione al usuario que desea consultar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= users_path %>"></i>Usuarios</a></li>
  </ol>
</section>
<br>
<div class="container-fluid box box-primary table-pad table-responsive">
  <table id="table-generic" class="table table-striped table-bordered table-condensed" width="100%" cellspacing="0">
    <br>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>Rol</th>
        <!-- <th>¿Habilitado?</th> -->
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| 
=begin        
        unless user.disabled
          dis_class = "fa fa-user-times red"
          dis_message = "deshabilitar"
        else
          dis_class = "fa fa-user-plus green"
          dis_message = "habilitar"
        end
=end      %>
        <tr>
        	<td><%= user.name %></td>
        	<td><%= user.lastname %></td>
          <td><%= user.email %></td>
        	<td><%= user.role %></td>
          <!-- <td align="center">
            <%# unless user.disabled %>
              <span class="badge label-success"><i class="fa fa-check"></i></span>
            <%# else %>
              <span class="badge label-danger"><i class="fa fa-close"></i></span>
            <%# end %>
          </td> -->
          <td><%= link_to 'Ver más', '/users/'+user.id.to_s  %></td>
          <td><%= link_to '/users/'+user.id.to_s+'/edit' do %><i class="fa fa-pencil"></i> <% end %></td>
          <td><%= link_to '/user/'+user.id.to_s, method: :delete, data: { confirm: '¿Estas seguro que desea  a '+user.full_name+'?' } do %><i class="fa fa-user-plus<%#= dis_class %>"></i>  <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users, :param_name => 'page', renderer: BootstrapPagination::Rails %>  
  <br>
  <%= link_to new_user_path , class: "btn btn-primary btn-flat" do %>
     <i class="fa fa-plus"></i> Nuevo usuario
  <% end %>
  <br><br>
</div>